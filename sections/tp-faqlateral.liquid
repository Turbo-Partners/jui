{% schema %}
{
    "name": "TP - Faq Lateral",
    "settings": [
            {
                "type": "text",
                "id": "title",
                "label": "Título do FAQ",
                "default": "Porque tomar Jui?"
            },
            {
                "type": "text",
                "id": "description",
                "label": "Descrição do FAQ",
                "default": "Benefícios que você pode realmente sentir"
            }
        ],
    "max_blocks": 4,
    "blocks": [
        {
            "type": "card",
            "name": "card",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "card__background",
                    "label": "Background do FAQ"
                },
                {
                    "type": "text",
                    "id": "card__title",
                    "label": "Título do FAQ"
                },
                {
                    "type": "text",
                    "id": "card__description",
                    "label": "Descrição do FAQ"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "TP - Faq Lateral"
        }
    ]
}
{% endschema %}


<div class="{{ section.id }} page-width">

    <div class="{{ section.id }}__title">
        <h1>{{ section.settings.title }}</h1>
        <p>{{ section.settings.description }}</p>
    </div>

    <div class="{{ section.id }}__content">
        {% for block in section.blocks %}
            <div class="item">
                <div class="photo">
                    <img src="{{ block.settings.card__background | image_url }}" alt="">
                </div>
                <div class="title">
                    <h2>{{ block.settings.card__title }}</h2>
                    <p>{{ block.settings.card__description }}</p>
                    {% render 'icon-click' %}
                </div>
            </div>
        {% endfor %}
    </div>

</div>


{% style %}
    .{{ section.id }}__content{
        display: flex;
        justify-content: center;
        align-items: flex-start;
        position: relative;
        padding-block: 2rem;
    }
    .item {
        flex: 0 0 25%;
        position: relative;
        overflow: hidden;

        transition: 0.5s;
    }
    .photo{
        width: 100%;
        height: 100%;
    }
    .photo > img {
        width: 100%;
        height: 100%;
        object-fit: cover;

        filter: blur(0.1px);
        transition: 0.5s;
    }
    .title{
        position: absolute;
        z-index: 2;
        bottom: 0px;

        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 1rem;
        padding: 1rem;
        width: 100%;
    }
    .title > h2{
        margin: 0;
        padding: 0;
        color: #B3D825;
        text-align: center;
        font-size: 2.4rem;
        transform-origin: top left;
        transition: 0.5s;
    }
    .title > p {
        margin: 0;
        padding: 0;
        font-size: 1.6rem;
        line-height: 2rem;
        color: white;
        text-align: center;

        position: absolute;
        opacity: 0;
        transform: scale(0) translateY(25px);
        transition: transform 0.1s 0.2s, opacity 0.1s 0.4s;
    }
    .item:hover {
        flex: 1;
    }
{% endstyle %}